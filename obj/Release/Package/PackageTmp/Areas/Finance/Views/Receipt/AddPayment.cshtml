                                <div id="form-date-range">
                                    <a id="SearchBtn" href="#" class="btn green">搜索</a>
                                </div>
                            </div>
                        </form> 
                    </div>
                </div>
                <div style="height:5px;"></div>
                <table class="table table-striped table-bordered table-hover table-advance" id="selectReceiptList">

                    <thead>

